{
    "name": "Multi-language Jupyter Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [8888],
    "postCreateCommand": "echo 'Container ready! Access Jupyter at http://localhost:8888'",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "haskell.haskell",
                "julialang.language-julia"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "jupyter.jupyterServerType": "local"
            }
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],
    "workspaceFolder": "/workspace"
}
